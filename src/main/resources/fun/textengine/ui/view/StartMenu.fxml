   <children>
      <ChoiceBox fx:id="modeChoiceBox" layoutY="100.0" prefHeight="25.0" prefWidth="600.0" />
      <Text cache="true" layoutY="90.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose work mode" textAlignment="JUSTIFY">
         <font>
            <Font size="30.0" />
         </font>
      </Text>
      <Text fx:id="modeDescription" layoutY="150.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Mode description">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Button fx:id="runButton" layoutX="563.0" layoutY="170.0" mnemonicParsing="false" onAction="#handleRun" text="Run" />
   </children>
</AnchorPane>
